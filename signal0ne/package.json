{
  "name": "signal0ne",
  "displayName": "Signal0ne",
  "description": "AI debugging assistant",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "AI",
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "signal0ne.fixCode",
        "title": "Fix code"
      },
      {
        "command": "signal0ne.issueFocus",
        "title": "Focus issue"
      },
      {
        "command": "signal0ne.login",
        "title": "Login to Signal0ne"
      },
      {
        "command": "signal0ne.logout",
        "title": "Logout from Signal0ne"
      }
    ],
    "configuration": {
      "title": "Signal0ne Configuration",
      "properties": {
        "signal0ne.showIssuesView": {
          "default": false,
          "description": "Show 'Issues' TreeView in Signal0ne",
          "type": "boolean"
        },
        "signal0ne.showWelcomeView": {
          "default": true,
          "description": "Show 'Signal0ne' WelcomeView in Signal0ne",
          "type": "boolean"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "signal0ne.fixCode",
          "group": "inline"
        }
      ],
      "view/item/context": [
        {
          "command": "signal0ne.issueFocus",
          "group": "inline",
          "when": "view == signal0neIssue && viewItem == 'issue'"
        }
      ]
    },
    "views": {
      "signal0ne": [
        {
          "icon": "resources/signal_img_logo.svg",
          "id": "signal0neIssue",
          "name": "Issues",
          "type": "tree",
          "when": "showIssuesView"
        },
        {
          "icon": "resources/signal_img_logo.svg",
          "id": "signal0ne",
          "name": "Signal0ne",
          "type": "tree"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "icon": "resources/signal_img_logo.svg",
          "id": "signal0ne",
          "title": "Signal0ne"
        }
      ]
    },
    "viewsWelcome": [
      {
        "contents": "Welcome to Signal0ne!\n Please sign in to explore your issues and fix then with ease!\n[Sign In](command:signal0ne.login)\nTo learn more about Signal0ne visit our webpage [here](https://signaloneai.com/).",
        "view": "signal0ne",
        "when": "showWelcomeView"
      }
    ]
  },
  "scripts": {
    "build:ui": "cd ui && npm run build",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile && npm run lint",
    "start:ui": "cd ui && npm run start",
    "test": "vscode-test",
    "vscode:prepublish": "npm run compile",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.1",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@types/uuid": "^9.0.8",
    "axios": "^1.6.8",
    "get-port": "^7.1.0",
    "get-port-please": "^3.1.2",
    "jwt-decode": "^4.0.0",
    "markdown-it": "^14.1.0",
    "server-destroy": "^1.0.1",
    "uuid": "^9.0.1",
    "vsce": "^2.15.0"
  }
}
